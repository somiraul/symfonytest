{% extends 'base.html.twig' %}

{% block title %}
	Products
{% endblock %}

{% block testblock %}

<h1>Product List</h1>
<div class="jumbotron">
	<table class="table">
		<thead>
		    <tr>
		      <th>Id</th>
		      <th>Product Name</th>
		      <th>Quantity</th>
		      <th>Price</th>
		      <th>Actions</th>
		    </tr>
		  </thead>  
