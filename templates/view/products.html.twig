	{% for i in data %}  
	    <tr>
	      <th>{{i.id}}</th>
	      <td>{{i.name}}</td>
	      <td>{{i.quantity}}</td>
	      <td>{{i.price}}</td>
	      <td>
	      	<a href="/product/show/{{i.id}}" class="btn btn-success"> View </a>
	      	<a href="#" class="btn btn-danger delete"> Delete </a>
	      </td>
	    </tr>
	{% endfor %}
	  </tbody>
	</table>
</div>

{% endblock %}

